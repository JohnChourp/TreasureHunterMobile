<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.codegrinders.treasure_hunter_mobile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"

        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Treasure_Hunter_Mobile"
        tools:targetApi="m">
        <activity android:name=".ActivityPuzzles" />
        <activity android:name=".ActivitySettings" />

        <service
            android:name=".MediaService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".ActivityMain" />
        <activity android:name=".ActivityLogin" />
        <activity android:name=".ActivityLeaderBoard" />
        <activity android:name=".ActivityRegister" />
        <activity android:name=".ActivityDelete"/>
        <activity android:name=".ActivityStart">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>